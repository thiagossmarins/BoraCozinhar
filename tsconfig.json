{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "baseUrl": "./",
    "paths": {
      "@components": [
        "src/components/index.ts"
      ],
      "@screens": [
        "src/screens/index.ts"
      ],
      "@hooks": [
        "src/hooks/index.ts"
      ],
      "@routes": [
        "src/routes/index.ts"
      ],
      "@theme": [
        "src/theme/index.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ]
}